{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o","${fileDirname}/${fileBasenameNoExtension}",
                "-I","${fileDirname}/SVMLike/include",
                "-L","${fileDirname}/SVMLike/bin",
                "-l:SVMLike.so",
                "-Wl,-rpath,./SVMLike/bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "SVMLike build"
            ],
            "detail": "Task generated by Debugger with dependancy on so ('-I' headers, '-L' .so loc, '-l:' .so, 'Wl,rpath,' runtime .so loc)."
        },   
        {
            "type": "shell",
            "label": "SVMLike build",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/Helpers/SVMLike"
            }
        }  
    ],
    "version": "2.0.0"
}